<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#6ba200</item>
    <item name="colorPrimaryDark">#6ba200</item>
    <item name="colorAccent">#FFFFFF</item>
    <item name="titleTextStyle">@style/MyTheme.ActionBar.Text</item>
    <item name="background">@color/colorWhite</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="titleTextColor">@color/colorWhite</item>
    <item name="colorControlNormal">@color/colorWhite</item>
  </style>

  <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
    <!-- navigation icon color -->
    <item name="colorControlNormal">#FFFFFF</item>
    <item name="android:background">#6ba200</item>
    <item name="android:windowContentOverlay">@null</item>
    <!-- color of the menu overflow icon -->
    <item name="android:textColorSecondary">#FFFFFF</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

  </style>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:background">#FFFFFF</item>
    <item name="android:textColor">#000000</item>
    <item name="android:windowContentOverlay">@null</item>
  </style>

  <style name="MyTheme.ActionBar.Text" parent="@android:style/TextAppearance">
    <item name="android:textColor">#FFFFFF</item>
  </style>


</resources>
